{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "MIT",
  "scripts": {
    "get-types:clone": "rm -rf grumblr-types && git clone https://github.com/cmgriffing/grumblr-types.git && rm -rf ./grumblr-types/.git",
    "get-types:copy": "cp -R ./grumblr-types ./node_modules/grumblr-types",
    "get-types": "npm-run-all -s get-types:clone get-types:copy",
    "tailwind:dev": "tailwindcss --output ./app/styles/tailwind.css --config ./app/config/tailwind.js --watch",
    "tailwind:build": "tailwindcss --output ./app/styles/tailwind.css --config ./app/config/tailwind.js --minify",
    "remix:dev": "node -r dotenv/config node_modules/.bin/remix dev",
    "remix:build": "remix build",
    "dev": "npm-run-all -p tailwind:dev remix:dev",
    "prebuild": "npm run get-types:copy",
    "build": "npm-run-all -s tailwind:build remix:build",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@fontsource/bevan": "^4.5.7",
    "@fontsource/nunito": "^4.5.8",
    "@headlessui/react": "^1.4.3",
