    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@remix-run/vercel": "^1.7.2",
    "@tailwindcss/forms": "^0.5.0",
    "@vechaiui/core": "^0.6.0",
    "@vechaiui/react": "^0.2.1",
    "boring-avatars": "^1.6.3",
    "case": "^1.6.3",
    "color": "^4.2.1",
    "deep-email-validator": "^0.1.18",
    "dotenv": "^10.0.0",
    "easy-peasy": "^5.0.4",
    "is-ios": "^2.1.0",
    "jwt-decode": "^3.1.2",
    "nice-color-palettes": "^3.0.0",
    "react": "^18.0.15",
    "react-dom": "^18.0.6",
    "remix": "^1.7.2",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
