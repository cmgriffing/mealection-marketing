{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "MIT",
  "scripts": {
    "tailwind:dev": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "tailwind:build": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "remix:dev": "node -r dotenv/config node_modules/.bin/remix dev",
    "remix:build": "remix build",
    "dev": "npm-run-all -p tailwind:dev remix:dev",
    "build": "npm-run-all -s tailwind:build remix:build",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@remix-run/vercel": "^1.0.6",
    "deep-email-validator": "^0.1.18",
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
